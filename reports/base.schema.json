{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/cdcent/data-exchange-messages/reports/base",
    "type": "object",
    "properties": {
        "version": {
            "type": "string"
        },
        "stage": {
            "type": "string"
        },
        "schema_name": {
            "type": "string,"
        },
        "report_id": {
            "$ref": "#/$defs/uuid",
            "description": "Unique identifier for this report, populated by the Processing Status API when a report is received and stored."
        },
        "progenitor_id": {
            "$ref": "#/$defs/uuid"
        },
        "message_id": {
            "$ref": "#/$defs/uuid"
        },
        "parent_id":{
            "$ref": "#/$defs/uuid"
        },
        "terminal": {
            "type": "boolean",
            "description": "Defines if processing may have continued after this event, for example failed manifest validation is terminal."
        }
    },
    "$defs": {
        "uuid": { 
            "type": "string",
            "format": "uuid"
        }
    }
}